---
import { SignIn } from "@clerk/astro/components";
---

<section class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full text-center">
    <h1 class="text-3xl font-serif text-gray-800 mb-6">Admin Login</h1>
    <SignIn
      fallbackRedirectUrl="/admin"
      appearance={{
        elements: {
          formButtonPrimary: "bg-amber-500 hover:bg-amber-600 text-white",
          card: "shadow-none border-none",
          input: "rounded-full border-gray-300 focus:border-amber-500",
        },
      }}
    />
  </div>
</section>
