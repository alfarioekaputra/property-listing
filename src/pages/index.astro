---
import Layout from "@layouts/Layout.astro";
import PropertyCard from "@components/PropertyCard.astro";

Astro.response.headers.set(
  "CDN-Cache-Control",
  "public, max-age=45, must-revalidate"
);

const properties = [
  {
    id: 1,
    slug: "villa-modern-minimalis",
    title: "Villa Modern Minimalis",
    location: "Jakarta Selatan",
    price: "Rp3.200.000.000",
    image: "/src/assets/villa.jpg",
    description: "Villa modern dengan 3 kamar tidur dan pemandangan kota.",
  },
  {
    id: 2,
    slug: "apartemen-premium",
    title: "Apartemen Premium",
    location: "Bandung",
    price: "Rp1.500.000.000",
    image: "/src/assets/apartment.jpg",
    description: "Apartemen yang nyaman dengan fasilitas modern.",
  },
  {
    id: 3,
    slug: "rumah-klasik-elegan",
    title: "Rumah Klasik Elegan",
    location: "Bali",
    price: "Rp2.800.000.000",
    image: "/src/assets/classic-house.jpg",
    description: "Rumah klasik dengan desain yang klasik.",
  },
];

const news = [
  {
    id: 1,
    slug: "tren-properti-2025",
    title: "Tren Properti 2025: Minimalis Masih Mendominasi",
    date: "20 Feb 2025",
    excerpt:
      "Desain minimalis kembali menjadi pilihan utama di pasar properti.",
  },
  {
    id: 2,
    slug: "harga-tanah-bali",
    title: "Harga Tanah di Bali Naik 15%",
    date: "15 Feb 2025",
    excerpt: "Lonjakan permintaan wisatawan memengaruhi harga properti.",
  },
];
---

<Layout
  title="Home"
  description="Temukan koleksi properti eksklusif dan berita properti terkini di Rumahku."
  canonical="https://rumahku.netlify.app"
>
  <!-- Hero Section -->
  <section
    id="hero"
    class="pt-24 pb-32 bg-cover bg-center bg-no-repeat text-white relative"
    style="background-image: url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2070&auto=format&fit=crop');"
  >
    <div class="absolute inset-0 bg-gray-900 opacity-70 z-0"></div>
    <div class="container mx-auto text-center relative z-10">
      <h2 class="text-5xl mb-6 leading-tight text-shadow-lg" data-aos="fade-up">
        Temukan Keindahan Hunian Anda
      </h2>
      <p
        class="text-lg mb-10 max-w-2xl mx-auto text-shadow-md"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Jelajahi koleksi properti eksklusif dengan desain elegan dan lokasi
        strategis.
      </p>
      <div
        class="max-w-lg mx-auto flex"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        <input
          type="text"
          placeholder="Cari properti impian Anda..."
          class="w-full p-4 rounded-l-full border-none bg-white focus:outline-none text-gray-800"
          id="search-input"
        />
        <button
          class="bg-amber-500 text-white p-4 rounded-r-full hover:bg-amber-600 transition duration-300"
          onclick="alert(document.getElementById('search-input').value ? `Mencari: ${document.getElementById('search-input').value}` : 'Masukkan kata kunci terlebih dahulu')"
        >
          Cari
        </button>
      </div>
    </div>
  </section>

  <!-- Property Listing Section -->
  <section id="properties" class="py-20 bg-gray-50">
    <div class="container mx-auto">
      <h3 class="text-4xl text-gray-800 text-center mb-12" data-aos="fade-up">
        Koleksi Properti Terbaru
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {
          properties.map((property) => (
            <PropertyCard
              title={property.title}
              location={property.location}
              price={property.price}
              image={property.image}
              slug={property.slug}
              delay={property.id * 200}
            />
          ))
        }
      </div>
    </div>
  </section>
  <!-- News Section -->
  <section id="news" class="py-20 bg-white">
    <div class="container mx-auto">
      <h3 class="text-4xl text-gray-800 text-center mb-12" data-aos="fade-up">
        Berita Properti Terkini
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          news.map((item) => (
            <div
              class="bg-gray-100 p-6 rounded-lg shadow-md"
              data-aos="fade-up"
              data-aos-delay={item.id * 200}
            >
              <h4 class="text-xl font-semibold text-gray-800">{item.title}</h4>
              <p class="text-gray-500 text-sm mb-2">{item.date}</p>
              <p class="text-gray-600">{item.excerpt}</p>
              <a
                href={`/news/${item.slug}`}
                class="text-amber-500 hover:underline mt-4 inline-block"
              >
                Baca Selengkapnya
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-gray-50">
    <div class="container mx-auto text-center">
      <h3 class="text-4xl text-gray-800 mb-12" data-aos="fade-up">
        Hubungi Kami
      </h3>
      <div class="max-w-xl mx-auto" data-aos="fade-up" data-aos-delay="200">
        <p class="text-lg text-gray-600 mb-8">
          Punya pertanyaan atau ingin konsultasi? Kami siap membantu Anda.
        </p>
        <form class="space-y-6">
          <input
            type="text"
            placeholder="Nama Anda"
            class="w-full p-4 rounded-full border border-gray-300 focus:outline-none focus:border-amber-500"
          />
          <input
            type="email"
            placeholder="Email Anda"
            class="w-full p-4 rounded-full border border-gray-300 focus:outline-none focus:border-amber-500"
          />
          <textarea
            placeholder="Pesan Anda"
            class="w-full p-4 rounded-lg border border-gray-300 focus:outline-none focus:border-amber-500"
            rows="4"></textarea>
          <button
            type="submit"
            class="bg-amber-500 text-white px-8 py-3 rounded-full hover:bg-amber-600 transition duration-300"
          >
            Kirim Pesan
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
