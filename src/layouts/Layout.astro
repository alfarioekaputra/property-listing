---
import { SEO } from 'astro-seo';

import '../styles/global.css';
import '@fontsource/poppins';

const {
  title,
  description = 'Temukan properti impian Anda dengan RumahKu.',
  canonical,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={`${title} - RumahKu`}
      description={description}
      canonical={canonical || Astro.url.href}
      openGraph={{
        basic: {
          title: `${title} - RumahKu`,
          type: 'website',
          url: Astro.url.href,
          image: '/images/og-image.jpg',
        },
        image: {
          alt: 'RumahKu Preview',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        title: `${title} - RumahKu`,
        description: description,
        image: '/images/og-image.jpg',
        imageAlt: 'RumahKu Preview',
      }}
    />
    <title>{title}</title>
  </head>

  <body class="bg-gray-50">
    <!-- Header -->
    <header class="fixed top-0 w-full bg-white shadow-md z-10">
      <div
        class="container mx-auto flex justify-between items-center py-4 px-6"
      >
        <h1 class="text-3xl text-gray-800">RumahKu</h1>
        <nav class="space-x-8">
          <a
            href="/"
            class="text-gray-600 hover:text-gray-900 transition duration-300"
            >Home</a
          >
          <a
            href="#properties"
            class="text-gray-600 hover:text-gray-900 transition duration-300"
            >Properties</a
          >
          <a
            href="#news"
            class="text-gray-600 hover:text-gray-900 transition duration-300"
            >News</a
          >
          <a
            href="#contact"
            class="text-gray-600 hover:text-gray-900 transition duration-300"
            >Contact</a
          >
          <button
            class="bg-gray-800 text-white px-5 py-2 rounded-full hover:bg-gray-700 transition duration-300"
          >
            Login
          </button>
        </nav>
      </div>
    </header>
    <slot />
    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
      <div class="container mx-auto text-center">
        <p class="text-sm">Â© 2025 RumahKu. All rights reserved.</p>
      </div>
    </footer>
    <script src="../js/aos"></script>
  </body>
</html>

<style>
  body {
    font-family: 'Poppins', sans-serif;
  }
</style>
